{
  "id": "com.shippo.best-rate",
  "version": "0.0.1",
  "name": "Shippo Rate Selector",
  "icon": "",
  "permissions": [
    {
      "permission": "invoice_read",
      "purpose": "Read the customer's address to calculate shipping rates"
    },
    {
      "permission": "invoice_write",
      "purpose": "Write metadata about shipping details to the invoice, update the invoice with new shipping charges"
    }
  ],
  "app_backend": {
    "webhooks": null
  },
  "ui_extension": {
    "views": [
      {
        "viewport": "stripe.dashboard.invoice.detail",
        "component": "AddShipping"
      }
    ],
    "actions": [],
    "content_security_policy": {
      "connect-src": [
        "https://api.goshippo.com/shipments",
        "https://api.goshippo.com/transactions"
      ],
      "image-src": [
        "https://shippo-static.s3.amazonaws.com/providers/"
      ],
      "purpose": "To load shipping partner logos"
    }
  }
}